<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    tools:context=".Patient.User_Dashboard">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="160dp">
                    <ImageView
                        android:src="@drawable/logo1"
                        android:layout_weight="1"
                        android:layout_margin="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ImageView>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/logo2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="400dp">
                    <LinearLayout
                        android:layout_weight="3"
                        android:weightSum="3"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_weight="1"
                            android:weightSum="3"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <Button
                                android:id="@+id/vaccine"
                                android:layout_margin="2dp"
                                android:background="@drawable/vaccine"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </Button>
                            <Button
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/insuline"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </Button>
                            <Button
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/baby_care"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </Button>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:weightSum="3"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <Button
                                android:layout_margin="2dp"
                                android:background="@drawable/lactation"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </Button>
                            <Button
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/medicine"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </Button>
                            <Button
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/injection"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </Button>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:weightSum="3"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <Button
                                android:layout_margin="2dp"
                                android:background="@drawable/vaccine"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </Button>
                            <Button
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/insuline"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </Button>
                            <Button
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/baby_care"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </Button>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_gravity="bottom"
            android:background="#2CFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:onClick="BookService"
                android:layout_margin="10dp"
                android:background="@drawable/book_btn_back2"
                android:text="Request For Service"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="44dp">
            </Button>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>