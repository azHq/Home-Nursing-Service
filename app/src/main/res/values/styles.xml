<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="customfontstyle" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="Login_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_rinho</item>
        <item name="colorAccent">@color/dark_white</item>
    </style>
    <style name="MyAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="home" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black1</item>
        <item name="colorPrimary">@color/gray1</item>
        <item name="colorAccent">@color/dark_white</item>
        <item name="popupMenuStyle">@style/menu_style</item>
    </style>
    <style name="menu_style" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="android:dropDownVerticalOffset">-34dp</item>
        <item name="android:textAppearanceLarge">@style/menu_text_style</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/menu_text_style</item>
    </style>
    <style name="menu_text_style" parent="android:TextAppearance.Holo.Large">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Spinner_Style" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">.5dp</item>
        <item name="android:background">@color/rinho</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Spinner_Theme" parent="AppTheme">
        <item name="android:padding">0dp</item>
        <item name="android:dropDownListViewStyle">@style/Spinner_Style</item>
    </style>

</resources>
